<?xml version="1.0" encoding="utf-8"?>

<unit name="КарточкаСчета">

	<type name="КарточкаСчета" title="Карточка счета" report="1" scope="global">
		<field.ref name="Счет" type="ПланСчетов"/>
		<field.ref name="СтатьяЗатрат" type="СтатьиЗатрат"/>
		<field.object name="Период" type="Период"/>
		<field.date name="НачалоПериода"/>
		<field.date name="ОкончаниеПериода"/>
		<field.array name="НачальноеСальдо" type="НачальноеСальдо"/>
		<field.array name="Содержание" type="Строка"/>
		<field.array name="Обороты" type="Обороты"/>
		<field.array name="КонечноеСальдо" type="КонечноеСальдо"/>
		<!--<field.number name="ИтогСНД" precision="2"/>-->
		<!--<field.number name="ИтогСНК" precision="2"/>-->
		
		<function name="НачалоПериода">
			<get field="Период.Начало"/>
		</function>
		
		<function name="ОкончаниеПериода">
			<get field="Период.Окончание"/>
		</function>
		
		<state name="constructor">
			
			<function name="НачалоПериода">
				<date>
					<year><today/></year>
					<month><today/></month>
					<get value="1"/>
				</date>
			</function>
			
			<function name="ОкончаниеПериода">
				<date>
					<year><today/></year>
					<add>
						<month><today/></month>
						<get value="1"/>
					</add>
					<get value="0"/>
				</date>
			</function>
			
			<function name="Счет">
				<seek>
					<get value="ПланСчетов"/>
					<get value="УЧТ"/>
				</seek>
			</function>
			
			<function name="title">
				<get value="(отчет не сформирован)"/>
			</function>
			
		</state>
		
		<field.ref name="СтрокаВедомости"/>
		
		<function name="НачалоРасшифровки">
			<is>
				<type><get field="parent"/></type>
				<get value="ВедомостьПоСчету-Строка"/>
			</is>
		</function>
			
		<state name="НачалоРасшифровки">
			
			<function name="СтрокаВедомости">
				<get field="parent"/>
			</function>
			
			<function name="НачалоРасшифровки">
				<get value="0"/>
			</function>
			
			<function name="РасшифровкаВедомости">
				<get value="1"/>
			</function>
		</state>
		
		<state name="РасшифровкаВедомости">
			
			<function name="НачалоПериода">
				<get field="СтрокаВедомости.owner.НачалоПериода"/>
			</function>
			
			<function name="ОкончаниеПериода">
				<get field="СтрокаВедомости.owner.ОкончаниеПериода"/>
			</function>
			
			<function name="Счет">
				<get field="СтрокаВедомости.owner.Счет"/>
			</function>
			
			<function name="СтатьяЗатрат">
				<get field="СтрокаВедомости.Наименование"/>
			</function>
			
			<function name="НачалоРасшифровки">
				<get value="0"/>
			</function>
			
			<function name="parent">
				<null/>
			</function>
			
			<function name="Сформировать">
				<get value="1"/>
			</function>

		</state>
		
		<state name="Сформировать">
			
			<function name="Сформировать">
				<get value="0"/>
			</function>
			
			<query name="НачальноеСальдо">
				<select from="Итоги">
					<filter by="Счет" field="Счет"/>
					<filter by="СтатьяЗатрат" field="СтатьяЗатрат"/>
					<group by="ГруппировкаДляИтога"/>
					<range by="Период" to="НачалоПериода"/>
					<get total="СуммаДт" as="ИтогСНД"/>
					<get total="СуммаКт" as="ИтогСНК"/>
				</select>
			</query>
	
			<query name="Содержание">
				<select from="Итоги">
					<filter by="Счет" field="Счет"/>
					<filter by="СтатьяЗатрат" field="СтатьяЗатрат"/>
					<range by="Период" from="НачалоПериода" to="ОкончаниеПериода"/>
					<get field="Период" as="Дата"/>
					<get field="СуммаДт" as="ДО"/>
					<get field="СуммаКт" as="КО"/>
					<get field="id" as="ЗаписьНаСчете"/>
				</select>
			</query>
	
			<query name="Обороты">
				<select from="Итоги">
					<filter by="Счет" field="Счет"/>
					<filter by="СтатьяЗатрат" field="СтатьяЗатрат"/>
					<group by="ГруппировкаДляИтога"/>
					<!--<group by="Счет"/>
					<group by="СтатьяЗатрат"/>-->
					<range by="Период" from="НачалоПериода" to="ОкончаниеПериода"/>
					<get total="СуммаДт" as="ДО"/>
					<get total="СуммаКт" as="КО"/>
				</select>
			</query>

			<query name="КонечноеСальдо">
				<select from="Итоги">
					<filter by="Счет" field="Счет"/>
					<filter by="СтатьяЗатрат" field="СтатьяЗатрат"/>
					<group by="ГруппировкаДляИтога"/>
					<range by="Период" to="ОкончаниеПериода"/>
					<get total="СуммаДт" as="ИтогСКД"/>
					<get total="СуммаКт" as="ИтогСКК"/>
				</select>
			</query>
	
			<function name="ИтогСНД">
				<sub>
					<sum>
						<get value="КонечноеСальдо"/>
						<get value="ИтогСКД"/>
					</sum>
					<sum>
						<get value="Обороты"/>
						<get value="ДО"/>
					</sum>
				</sub>
			</function>
		
			<function name="ИтогСНК">
				<sub>
					<sum>
						<get value="КонечноеСальдо"/>
						<get value="ИтогСКК"/>
					</sum>
					<sum>
						<get value="Обороты"/>
						<get value="КО"/>
					</sum>
				</sub>
			</function>
		
			<function name="title">
				<join>
					<get value=" за "/>
					<period>
						<get field="Период.Начало"/>
						<get field="Период.Окончание"/>
					</period>
				</join>
			</function>
			
		</state>
		
		<index name="КарточкаСчета">
			<key field="НачалоПериода"/>
		</index>
	</type>
		
	<type name="Строка">
		<field.ref name="Счет" type="ПланСчетов"/>
		<field.ref name="СтатьяЗатрат" type="СтатьиЗатрат"/>
		<field.date name="Дата"/>
		<field.string name="Операция"/>
		<field.string name="Комментарий"/>
		<field.string name="СчетДебета"/>
		<field.string name="СчетКредита"/>
		<field.ref name="ЗаписьНаСчете"/>
		<field.ref name="Документ"/>
		<field.string name="ДатаЗаписи"/>
		<field.string name="ВремяЗаписи"/>
		<field.number name="ПорядокЗаписи"/>
		<field.number name="ДО" precision="2"/>
		<field.number name="КО" precision="2"/>
		<field.array name="СальдоСтроки" type="СальдоСтроки"/>
		
		<function name="Счет">
			<get field="owner.Счет"/>
		</function>
		
		<function name="СтатьяЗатрат">
			<get field="owner.СтатьяЗатрат"/>
		</function>
		
		<field.number name="СальдоДО" precision="2"/>
		<field.number name="СальдоКО" precision="2"/>
		<field.string name="Признак"/>
		<field.number name="Сальдо" precision="2"/>

		<function name="СальдоДО">
			<!--<sum>
				<get value="СальдоСтроки"/>
				<get value="ИтогСКД"/>
			</sum>-->
			<total>
				<get value="ИтогиУчет"/>
				<get value="СуммаДт"/>
				<get value="Счет"/><get field="owner.Счет"/><get field="owner.Счет"/>
				<get value="СтатьяЗатрат"/><get field="owner.СтатьяЗатрат"/><get field="owner.СтатьяЗатрат"/>
				<get value="Период"/><null/><get field="Дата"/>
				<get value="Дата"/><null/><get field="ДатаЗаписи"/>
				<get value="Время"/><null/><get field="ВремяЗаписи"/>
				<get value="Порядок"/><null/><get field="ПорядокЗаписи"/>
				<get value="id"/><null/><get field="ЗаписьНаСчете"/>
			</total>
		</function>
		
		<function name="СальдоКО">
			<!--<sum>
				<get value="СальдоСтроки"/>
				<get value="ИтогСКК"/>
			</sum>-->
			<total>
				<get value="ИтогиУчет"/>
				<get value="СуммаКт"/>
				<get value="Счет"/><get field="owner.Счет"/><get field="owner.Счет"/>
				<get value="СтатьяЗатрат"/><get field="owner.СтатьяЗатрат"/><get field="owner.СтатьяЗатрат"/>
				<get value="Период"/><null/><get field="Дата"/>
				<get value="Дата"/><null/><get field="ДатаЗаписи"/>
				<get value="Время"/><null/><get field="ВремяЗаписи"/>
				<get value="Порядок"/><null/><get field="ПорядокЗаписи"/>
				<get value="id"/><null/><get field="ЗаписьНаСчете"/>
			</total>
		</function>
		
		<function name="Признак">
			<if><lt><get field="СальдоДО"/><get field="СальдоКО"/></lt>
				<get value="К"/>
				<get value="Д"/>
			</if>
		</function>
		
		<function name="Сальдо">
			<if><gt><get field="СальдоДО"/><get field="СальдоКО"/></gt>
				<sub>
					<get field="СальдоДО"/>
					<get field="СальдоКО"/>
				</sub>
				<sub>
					<get field="СальдоКО"/>
					<get field="СальдоДО"/>
				</sub>
			</if>
		</function>
		
		<function name="Операция">
			<join>
				<get value="Операция №"/>
				<get field="ЗаписьНаСчете.owner.owner.Номер"/>
			</join>
		</function>
		
		<function name="Комментарий">
			<concat>
				<br/>
				<get field="ЗаписьНаСчете.owner.owner.Комментарий"/>
				<get field="ЗаписьНаСчете.owner.owner.СтатьяДебета.Наименование"/>
				<get field="ЗаписьНаСчете.owner.owner.СтатьяКредита.Наименование"/>
			</concat>
		</function>
		
		<function name="СчетДебета">
			<get field="ЗаписьНаСчете.owner.СчетДт.Код"/>
		</function>
		
		<function name="СчетКредита">
			<get field="ЗаписьНаСчете.owner.СчетКт.Код"/>
		</function>
		
		<function name="Документ">
			<get field="ЗаписьНаСчете.owner.owner"/>
		</function>
		
		<function name="ДатаЗаписи">
			<get field="ЗаписьНаСчете.Дата"/>
		</function>
		
		<function name="ВремяЗаписи">
			<get field="ЗаписьНаСчете.Время"/>
		</function>
		
		<function name="ПорядокЗаписи">
			<get field="ЗаписьНаСчете.Порядок"/>
		</function>
		
		<!--<query name="СальдоСтроки">
			<select from="Итоги">
				<filter by="Счет" field="owner.Счет"/>
				<filter by="СтатьяЗатрат" field="owner.СтатьяЗатрат"/>
				<range by="Период" to="Дата"/>
				<range by="Дата" to="ДатаЗаписи"/>
				<range by="Время" to="ВремяЗаписи"/>
				<range by="Порядок" to="ПорядокЗаписи"/>
				<range by="id" to="ЗаписьНаСчете"/>
				--><!--<group by="ГруппировкаДляИтога"/>--><!--
				<get total="СуммаДт" as="ИтогСКД"/>
				<get total="СуммаКт" as="ИтогСКК"/>
				<get field="СуммаДт" as="ИтогСКД"/>
				<get field="СуммаКт" as="ИтогСКК"/>
			</select>
		</query>-->
	</type>
	
	<type name="СальдоСтроки">
		<field.number name="ИтогСКД" precision="2"/>
		<field.number name="ИтогСКК" precision="2"/>
	</type>
	
	<type name="Обороты">
		<field.number name="ДО" precision="2"/>
		<field.number name="КО" precision="2"/>
	</type>
		
	<type name="НачальноеСальдо">
		<field.string name="Наименование"/>
		<field.number name="ИтогСНД" precision="2"/>
		<field.number name="ИтогСНК" precision="2"/>
		<field.number name="СНД" precision="2"/>
		<field.number name="СНК" precision="2"/>
		
		<function name="Наименование">
			<join>
				<get value="Сальдо на "/>
				<format>
					<get field="owner.Период.Начало"/>
					<get value="Дата"/>
				</format>
			</join>
		</function>
		
		<!--<function name="ИтогСНД">
			<get field="owner.ИтогСНД"/>
		</function>-->
		
		<function name="СНД">
			<if><gt><get field="ИтогСНД"/><get field="ИтогСНК"/></gt>
				<sub><get field="ИтогСНД"/><get field="ИтогСНК"/></sub>
				<get value="0"/>
			</if>
		</function>
		
		<function name="СНК">
			<if><gt><get field="ИтогСНК"/><get field="ИтогСНД"/></gt>
				<sub><get field="ИтогСНК"/><get field="ИтогСНД"/></sub>
				<get value="0"/>
			</if>
		</function>
	</type>
		
	<type name="КонечноеСальдо">
		<field.string name="Наименование"/>
		<field.number name="ИтогСКД" precision="2"/>
		<field.number name="ИтогСКК" precision="2"/>
		<field.number name="СКД" precision="2"/>
		<field.number name="СКК" precision="2"/>
		
		<function name="Наименование">
			<join>
				<get value="Сальдо на "/>
				<format>
					<get field="owner.Период.Окончание"/>
					<get value="Дата"/>
				</format>
			</join>
		</function>
		
		<function name="СКД">
			<if><gt><get field="ИтогСКД"/><get field="ИтогСКК"/></gt>
				<sub><get field="ИтогСКД"/><get field="ИтогСКК"/></sub>
				<get value="0"/>
			</if>
		</function>
		
		<function name="СКК">
			<if><gt><get field="ИтогСКК"/><get field="ИтогСКД"/></gt>
				<sub><get field="ИтогСКК"/><get field="ИтогСКД"/></sub>
				<get value="0"/>
			</if>
		</function>
	</type>
	
</unit>
